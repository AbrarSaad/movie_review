<% if !user_signed_in? %>
<div class="jumbotron">
<h1>Your Favorit Movies Reviewed</h1>
<p> My heart you should make sign up. </p>
<p><%= link_to "Sign Up my heart", new_user_registration_path, class: "btn btn-primary btn-lg" %> </p>
<% end %>

<div class="row">
  <% @movies.each do |movie| %>
  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
      <%= link_to (image_tag movie.image.url(:medium), class: 'image'), movie %>
    </div>
  </div>
  <% end %>
</div>
